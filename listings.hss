/*    Listing configuration                                            */
/*=====================================================================*/

/*---------------------------------------------------------------------*/
/*    listings ...                                                     */
/*---------------------------------------------------------------------*/
.listings {
    font-size: var(--listingFontSize);
    font-family: CourierMono;
    width: 95%;
    background: white;
    text-align: left;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    border: 1px solid #ddd;
    border-left: 4px;
    padding: 8px;
    color: black;
}

.listings {
    border-left: 8px solid;
}

.javascript {
    border-left-color: var(--javascript-color);
}

.hiphop {
    border-left-color: var(--hiphop-color);
}

/*---------------------------------------------------------------------*/
/*    fontifier                                                        */
/*---------------------------------------------------------------------*/
.hopscript .fontifier-prog .sealed,
.hopscript .fontifier-prog .class,
.javascript .class {
    color: var(--purple);
}

/*---------------------------------------------------------------------*/
/*    HipHop fontification                                             */
/*---------------------------------------------------------------------*/
pre.hiphop .fontifier-prog-reserved.hiphop {
    background-color: var(--greydark);
    color: white;
    font-weight: bold;
    border-radius: 4px;
    padding-left: 0.1em;
    padding-right: 0.1em;
}

pre.hiphop .fontifier-prog-reserved.module,
pre.hiphop .fontifier-prog-reserved.loop,
pre.hiphop .fontifier-prog-reserved.emit,
pre.hiphop .fontifier-prog-reserved.yield,
pre.hiphop .fontifier-prog-reserved.combine,
pre.hiphop .fontifier-prog-reserved.inout,
pre.hiphop .fontifier-prog-reserved.sustain,
pre.hiphop .fontifier-prog-reserved.fork,
pre.hiphop .fontifier-prog-reserved.par,
pre.hiphop .fontifier-prog-reserved.suspend,
pre.hiphop .fontifier-prog-reserved.signal,
pre.hiphop .fontifier-prog-reserved.break {
    color: var(--greendark);
    font-weight: bold;
}

pre.hiphop .fontifier-prog-reserved.const,
pre.hiphop .fontifier-prog-reserved.new {
    color: var(--purple);
    font-weight: bold;
}

pre.hiphop .fontifier-prog-string {
    color: var(--red);
}
